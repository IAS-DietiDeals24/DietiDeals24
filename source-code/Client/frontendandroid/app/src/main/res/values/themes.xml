<resources>

    <style name="BottoneArancioneGrande">
        <item name="android:layout_width">260.dp</item>
        <item name="android:layout_height">50.dp</item>
        <item name="android:backgroundTint">@color/arancione</item>
        <item name="android:fontFamily">@font/fira_sans</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/grigio</item>
        <item name="android:textSize">20.sp</item>
        <item name="android:translationZ">10.dp</item>
    </style>

    <style name="BottoneBluGrande">
        <item name="android:layout_width">260.dp</item>
        <item name="android:layout_height">50.dp</item>
        <item name="android:backgroundTint">@color/blu</item>
        <item name="android:fontFamily">@font/fira_sans</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/grigio</item>
        <item name="android:textSize">20.sp</item>
        <item name="android:translationZ">10.dp</item>
    </style>

    <style name="BottoneBluPiccolo">
        <item name="android:layout_width">162.dp</item>
        <item name="android:layout_height">50.dp</item>
        <item name="android:backgroundTint">@color/blu</item>
        <item name="android:fontFamily">@font/fira_sans</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/grigio</item>
        <item name="android:textSize">20.sp</item>
    </style>

    <style name="BottoneArancionePiccolo">
        <item name="android:layout_width">162.dp</item>
        <item name="android:layout_height">50.dp</item>
        <item name="android:backgroundTint">@color/arancione</item>
        <item name="android:fontFamily">@font/fira_sans</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/grigio</item>
        <item name="android:textSize">20.sp</item>
    </style>

    <style name="ImageViewRotonda">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomNavigationView" parent="@style/ThemeOverlay.Material3.NavigationView">
        <item name="colorOnSecondaryContainer">@color/arancione</item>
        <item name="colorOnSurface">@color/arancione</item>
        <item name="colorOnSurfaceVariant">@color/blu</item>
        <item name="textAppearanceTitleSmall">@font/fira_sans_medium</item>
    </style>

    <style name="ImageViewRettangolare">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15.dp</item>
    </style>

    <style name="DatePicker" parent="@style/ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/arancione</item>
        <item name="colorOnPrimary">@color/blu</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15.dp</item>
    </style>

    <style name="Dialog" parent="@style/ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/arancione</item>
        <item name="colorOnPrimary">@color/blu</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15.dp</item>
    </style>
</resources>